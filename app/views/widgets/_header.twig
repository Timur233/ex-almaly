<header class="main-header" :class="{'main-header--sticky': headerIsSticky}">
   <div class="container-fluid">
      <div class="main-header__content">
         <div class="main-header__menu-toggle">
            <div class="menu-toggle header-toggle">
               <span class="menu-toggle__line"></span>
               <span class="menu-toggle__line"></span>
               <span class="menu-toggle__line"></span>
            </div>
         </div>

         <div class="logo-block main-header__logo">
            <a href="{{ base_url }}">
               <img 
                  src="https://cms.abpx.kz{{ site_logo.path }}" 
                  class="logo-block__img" 
                  alt="Exclusive Qurylys"
               >
            </a>
         </div>

         <div class="navigate main-header__navigate">
            <nav class="navigate__block">
               <a href="#about-project" class="navigate__link">О проекте</a>
               <a href="#advantages" class="navigate__link">Преимущества</a>
               <a href="#appartaments" class="navigate__link">Квартиры</a>
               <a href="#appartaments" class="navigate__link">Презентация</a>
               <a href="#appartaments" class="navigate__link">Стройка</a>
               <a href="#appartaments" class="navigate__link">О компании</a>
               <a href="#appartaments" class="navigate__link">Контакты</a>
            </nav>
         </div>
         
         <div class="main-contact main-header__contact">

            <div class="main-contact__lang-switcher lang-switcher">
               <a href="{{ base_url }}kk" class="lang-switcher__link">KZ</a>
            </div>

            <div class="main-contact__block">

               <a href="tel:{{ site_phone }}" onclick="" class="main-contact__phone">
                  <img src="{{ base_url }}assets/img/icons/icon-phone.svg" >
                  {{ site_phone }}
               </a>

               <button class="main-contact__callback-link">
                  Отправить заявку{{ translate['callback_title'] }}
               </button>

               <a href="tel:{{ site_phone }}" class="main-contact__mobile">
                  <img src="{{ base_url }}assets/img/icons/phone.svg" alt="">
               </a>

            </div>

         </div>
      </div>
   </div>
</header>