<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Алтын сити {{ site_title }}</title>
    <link rel="shortcut icon" href="https://cms.abpx.kz/{{ site_favicon.path }}" type="image/png">
    <link rel="stylesheet" href="{{ base_url }}assets/css/app.min.css">

    {{ site_scripts_in_head|raw }}
  
  </head>
  <body>
  
    {{ site_scripts_in_body|raw }}

    <div id="app">

      <fs-lightbox
        :toggler="isLightbox"
        :sources="sourcesLightbox"
      ></fs-lightbox>

      <fs-lightbox
        :toggler="isBuildingStepBox"
        :sources="buildingStepSource"
      ></fs-lightbox>
  
      {{ include('widgets/air_menu.twig') }}
  
      {{ include('widgets/_header.twig') }}
  
      {{ include('widgets/slider.twig') }}

      {{ include('widgets/discounts.twig') }}

      {{ include('widgets/carousel.twig') }}
  
      {{ include('widgets/pay_methods.twig') }}

      {{ include('widgets/banners.twig') }}

      {{ include('widgets/commerce.twig') }}

      {{ include('widgets/about_project.twig') }}

      {{ include('widgets/benefits.twig') }}

      {{ include('widgets/main_callback.twig') }}

      {{ include('widgets/filter_appartaments.twig') }}

      {{ include('widgets/gallery.twig') }}

      {{ include('widgets/building_steps.twig') }}

      {{ include('widgets/callback.twig') }}

      {{ include('widgets/about_company.twig') }}

      {{ include('widgets/footer.twig') }}

      <modal :is-show="callbackModalShow" @close-modal="callbackModalShow = false">
        <form-modal
          :user-name-placeholder="'Имя'"
          :no-valid-phone-number="'Пожалуйста, проверьте, правильность введённого вами номера!'"
          :no-valid-form-data="'Не заполнены обязательные поля'"
          :submit-text="'Отправить заявку'"
          @show-form-result="callbackResultShow = true"
        >
          <div class="section__title-block callback-h__title-block">
              <h2 class="section__title section__title--gold">
                СПАСИБО!<br>
                МЫ ВАМ ПЕРЕЗВОНИМ!
              </h2>
          </div>
          <div class="flex">
            <div class="flex__8">
              <button 
                class="btn btn--gradient" 
                @click="callbackModalShow = false"
              >Закрыть</button>
            </div>
          </div>
        </form-modal>
      </modal>

      <modal :is-show="callbackResultShow" @close-modal="callbackResultShow = false">
        <div class="section__title-block callback-h__title-block">
            <h2 class="section__title section__title--gold">
              СПАСИБО!<br>
              МЫ ВАМ ПЕРЕЗВОНИМ!
            </h2>
        </div>
        <div class="flex">
          <div class="flex__8">
            <button 
              class="btn btn--gradient" 
              @click="callbackResultShow = false"
            >Закрыть</button>
          </div>
        </div>
      </modal>

      <modal :is-show="callbackResultShow" @close-modal="callbackResultShow = false">
        
      </modal>
      
    </div>

  </body>

  <script src="{{ base_url }}assets/js/app.js"></script>

  {{ site_scripts_in_footer|raw }}

</html>
